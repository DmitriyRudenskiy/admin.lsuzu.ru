{% extends "admin.layouts.app" %}

{% block title %}Телефоны{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-5 col-md-7">
            {% if error is not empty %}
                <div class="alert alert-danger" role="alert">Телефон уже добавлен в базу</div>
            {% endif %}

            <div class="form-group">
                <label>Обработан</label>
                <p class="form-control-static">{% if phone.call is empty %}<span class="text-success">новый</span>{% else %}{{ item.call | date ("d.m H:i") }}{% endif %}</p>
            </div>

                <div class="form-group">
                    <label>Номер телефона</label>
                    <p class="form-control-static">{{ phone.number }}</p>
                </div>

                <div class="form-group">
                    <label>Источник телефона</label>
                    <p class="form-control-static">{{ phone.vendor }}</p>
                </div>

                <div class="form-group">
                    <label>Область</label>
                    <p class="form-control-static">{{ phone.group_city }}</p>
                </div>

                <div class="form-group">
                    <label>Город</label>
                    <p class="form-control-static">{{ phone.city }}</p>
                </div>

                <div class="form-group">
                    <label>Сибирский регион</label>
                    <p class="form-control-static">{% if phone.is_sib is empty %}+{% else %}-{% endif %}</p>
                </div>

                <div class="form-group">
                    <label>Примечание</label>
                    <p class="form-control-static">{{ phone.comment }}</p>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-5 col-md-7">
            <div class="row">
                {% for item in images %}
                <div class="col-lg-4 col-md-2">
                    <div class="thumbnail">
                        <div class="caption">
                            <p><a href="#" class="btn btn-primary btn-block" role="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> редактировать</a></p>
                            <img class="lazy" src="/img/preload.gif" data-original="{{ route('admin_query_image', {hash: item.hash }) }}" style="width: 100%">
                            <p>{{ item.title }}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            {{ images.render() | raw }}
        </div>
    </div>
{% endblock %}